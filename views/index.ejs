<%- include("partials/header.ejs") %>
<body>
    

    <h1 class="title">Todays ToDoList</h1>

    <div class="mx-auto w-25 border p-3 bg bg-opacity-10 border-success rounded-pill">
        <h2 class="timestamp"><%= timestamp %></h2>
    </div>
    <div class="form-container middle">
    <form action="/submitHome" method="POST" class="form">
        <input type="text" id="addList" name="addList" required>
        <input type="submit" value="+">
    </form>
 </div>
    <div class="todoList middle">
    <ul>
        <% todoList.forEach((element) => { %>
            <div>
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"><li class="listItem"> <%= element %> </li>
            </div>
      <%  }) %>
    </ul>
</div>
<form action="/clearHome" method="POST" class="clear middle">
    <input type="submit" value="Clear List">
</form>
</body>